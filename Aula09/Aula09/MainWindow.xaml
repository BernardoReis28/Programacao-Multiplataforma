<Window x:Class="Aula09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula09"
        mc:Ignorable="d"
        Title="Gestão de Escola" Height="236" Width="353" Loaded="Window_Loaded">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Escola"/><Run Text=":"/></TextBlock>
        <GroupBox Header="Departamentos" Margin="10,42,21,60">
            <ComboBox x:Name="cbDepartamentos" HorizontalAlignment="Center" Width="290" Height="20" SelectionChanged="cbDepartamentos_SelectionChanged"/>
        </GroupBox>
        <StatusBar Margin="0,162,0,0">
            <StatusBarItem x:Name="sbiNDocentes" Content="Nº Docentes: ?" Height="36" VerticalAlignment="Top"/>
        </StatusBar>
        <TextBlock x:Name="tbEscola" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pt-pt" Text="?"/></TextBlock>

    </Grid>
</Window>
